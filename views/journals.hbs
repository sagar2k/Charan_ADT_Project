    </div>
  </nav>

  <!-- Main Content -->
  <div class="center">
    <div id="content">
      <h1>My Journals</h1>
      <form action="/journals/journalspage" method="POST">
            <div class="form-group">
                <label for="date-picker">Select Date:</label>
                <input type="date" class="form-control" id="date-picker" name = "date_picker">
            </div>
            <textarea id="journal" name="journal_text" rows="10"></textarea>
            <div class="center">
                    <button id="submit-btn">Submit</button>
        </form>
    </div>
  </div>

   <!-- JavaScript -->
  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <!-- Popper.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <!-- Bootstrap JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script>
    // Get the submit button element
    const submitButton = document.querySelector('#submit-btn');

    // Add a click event listener to the submit button
    submitButton.addEventListener('click', function() {
      // Get the selected date value
      const selectedDate = document.querySelector('#date-picker').value;

      // Get the journal text value
      const journalText = document.querySelector('#journal').value;

      // Log the values to the console
      console.log('Selected date:', selectedDate);
      console.log('Journal text:', journalText);
    });
  </script>
</body>
