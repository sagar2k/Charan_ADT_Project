  <script>
      // Code for Date Selector
  const datePicker = document.getElementById('todo-datepicker');

  datePicker.addEventListener('change', function() {
    const selectedDate = datePicker.value;
    console.log(`Selected Date: ${selectedDate}`);
  });

  // Code for Priority Checkboxes
  const priorityCheckboxes = document.querySelectorAll('input[name="priority"]');

  priorityCheckboxes.forEach(function(checkbox) {
    checkbox.addEventListener('change', function() {
      const selectedPriority = this.value;
      console.log(`Selected Priority: ${selectedPriority}`);
    });
  });
  </script>
