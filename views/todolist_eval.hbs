  <!-- Main Content -->
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h3 class="mb-4">To-Do List</h3>


        <form action="/todolist/todolisteval" method="POST">
        <div class="form-group">
          <label for="date-picker">Select Date:</label>
          <input type="date" id="date-picker" class="form-control" name="date_picker">
        </div>
        <div class="form-group">
          <label for="priority-checkboxes">Priority:</label>
          <div id="priority-checkboxes">
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="priority-1" name = "p1_is_complete">
              <label class="custom-control-label" for="priority-1">Priority 1</label>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="priority-2" name = "p2_is_complete">
              <label class="custom-control-label" for="priority-2">Priority 2</label>
            </div>
            <div class="custom-control custom-checkbox">
              <input type="checkbox" class="custom-control-input" id="priority-3" name = "p3_is_complete">
              <label class="custom-control-label" for="priority-3">Priority 3</label>
            </div>
          </div>
        </div>
        <div class="center">
              <button id="submit-btn">Submit</button>
        </div>
        </form>
      </div>
    </div>
