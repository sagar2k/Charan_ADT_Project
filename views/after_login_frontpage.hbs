          <td>
          <form method="POST" action="/delete/todolist">
            <input type="hidden" name="id" value="{{this.date}}">
            <button type="submit">Delete</button>
          </form>
           </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    </div>
  </div>
  

